@model LaisserUnAvisViewModel
@{
    ViewData["Title"] = "Laisser un avis sur la formation : " + Model.NomFormation;
}

<h1>Laisser un avis sur la formation : @Model.NomFormation</h1>
<br />
<p>Merci de compléter les champs ci dessous :</p>
<form action="/Avis/SaveComment">

    @*
        @Html.ValidationSummary("",new { @class="text-danger"})

        autre façon mais faut faire pour chaque truc
        @Html.ValidationMessageFor(a => a.Nom)

        formmethod="post" dans le 1° input
    *@
    <div asp-validation-summary="All" class="text-danger"></div>
    
    @*<div class="form-group">
        <label>Nom :</label>
        <input type="text" name="nom" value="@Model.Nom" class="form-control" />
    </div>*@

    <p>Merci d'écrire votre avis ci dessous :</p>
    <textarea cols="5" name="commentaire" class="form-control">@Model.Commentaire</textarea>
    <br />
    <div class="form-group">
        <label>Merci de sélectionner une note :</label>
        <select name="note" class="form-control">
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
            <option>2.5</option>
            <option>3</option>
            <option>3.5</option>
            <option>4</option>
            <option>4.5</option>
            <option>5</option>
        </select>
    </div>

    <input type="submit" value="Poster votre avis" class="btn-lg btn-warning" />
    <input type="hidden" name="idFormation" value=" @Model.IdFormation" />

</form>

